<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.arjun.travel.NavigationDrawerFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
            android:id="@+id/containerDrawerImage"
            android:layout_width="match_parent"
            android:layout_height="@dimen/oneforty_dp"
            android:background="@color/colorPrimary">
        <ImageView
            android:id="@+id/image_profile"
            android:src="@drawable/android_robot"
            android:layout_width="@dimen/twoeighty_dp"
            android:layout_height="@dimen/oneforty_dp" />
        </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/drawerList"
        android:layout_below="@id/containerDrawerImage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
</RelativeLayout>
